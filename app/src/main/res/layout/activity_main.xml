<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/et_Text"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:focusable="false"
            android:ems="10"
            android:textSize="120px"
            android:textStyle="bold"
            android:textColor="#353636"
            android:maxLength="15"
            android:maxLines="1"
            android:gravity="right">

            <requestFocus android:layout_width="wrap_content"/>
        </EditText>
        <EditText
            android:id="@+id/et_Text_2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:focusable="false"
            android:ems="10"
            android:textColor="#B7B8B8"
            android:textStyle="bold"
            android:textSize="120px"
            android:maxLength="15"
            android:gravity="right">

            <requestFocus android:layout_width="wrap_content"/>
        </EditText>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="600dp">

        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_5"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:text="5"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_6"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_toLeftOf="@+id/btn_5"
            android:layout_below="@id/btn_5"
            android:text="6"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_7"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_toLeftOf="@+id/btn_6"
            android:layout_below="@id/btn_6"
            android:text="7"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_4"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_toRightOf="@id/btn_5"
            android:layout_below="@id/btn_5"
            android:text="4"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_3"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_toRightOf="@id/btn_4"
            android:layout_below="@id/btn_4"
            android:text="3"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_8"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_7"
            android:text="8"
            android:layout_alignLeft="@id/btn_7"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_2"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_3"
            android:text="2"
            android:layout_alignLeft="@id/btn_3"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_9"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_8"
            android:layout_toRightOf="@id/btn_8"
            android:text="9"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_0"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_9"
            android:text="0"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format"
            android:id="@+id/btn_1"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_2"
            android:layout_toLeftOf="@id/btn_2"
            android:text="1"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_left"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_0"
            android:layout_toLeftOf="@id/btn_0"
            android:text="("
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_right"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_0"
            android:layout_toRightOf="@id/btn_0"
            android:text=")"
            android:layout_margin="2dp"
            android:textSize="20sp"/>

        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_minus"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_toLeftOf="@+id/btn_6"
            android:layout_below="@id/btn_left"
            android:text="-"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_divide"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_minus"
            android:text="/"
            android:layout_alignLeft="@id/btn_minus"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_plus"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_toRightOf="@id/btn_right"
            android:layout_below="@id/btn_right"
            android:text="+"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_multiple"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_plus"
            android:text="*"
            android:layout_alignLeft="@id/btn_plus"
            android:layout_margin="2dp"
            android:textSize="20sp"/>

        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_del"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_divide"
            android:layout_toRightOf="@id/btn_divide"
            android:text="DEL"
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_dot"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_below="@id/btn_multiple"
            android:layout_toLeftOf="@id/btn_multiple"
            android:text="."
            android:layout_margin="2dp"
            android:textSize="20sp"/>
        <Button
            android:background="@drawable/button_format_2"
            android:id="@+id/btn_equal"
            android:layout_width="75dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_del"
            android:text="="
            android:layout_margin="2dp"
            android:textSize="20sp"/>






    </RelativeLayout>


</LinearLayout>